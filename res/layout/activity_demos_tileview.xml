<?xml version="1.0" encoding="utf-8"?>


<!-- https://developer.android.com/reference/android/widget/RelativeLayout.LayoutParams -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<!-- https://developer.android.com/guide/topics/ui/custom-components voir en bas la dÃ©claration "declare the View component with the XML element name, and exclude the class attribute" -->
	<com.qozix.tileview.TileView 
		android:id="@+id/tileview" 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFe7e7e7" 
	/>
<!-- layout_centerInParent -->	
    <ImageButton
		android:id="@+id/bouton1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"	
		android:onClick="ActionPressBouton1"	
		android:background="@drawable/bouton1_sel"
		android:textSize="40sp"
		android:layout_margin="10dp"
	/>
	
	<ToggleButton
		android:id="@+id/bouton2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:textOn=""
        android:textOff=""
        android:checked="true"
		android:background="@drawable/bouton2_sel"	
		android:onClick="ActionPressBouton2"	
		android:layout_margin="10dp"
	/>
	
	<ToggleButton
		android:id="@+id/bouton3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:textOn=""
        android:textOff=""
        android:checked="true"
		android:background="@drawable/bouton3_sel"	
		android:onClick="ActionPressBouton3"	
		android:layout_margin="10dp"
	/>
	
    <TextView
		android:id="@+id/textview1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"	
		android:text="@string/init_txtview"
		android:textColor="#000000"
		android:background="#80FFFFFF"
	/>
                                     
</RelativeLayout>                              

